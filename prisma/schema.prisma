generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  STUDENT
  TEACHER
}

enum LearningStyle {
  VISUAL
  AUDITORY
  KINESTHETIC
}

model User {
  id               Int       @id @default(autoincrement())
  name             String
  email            String    @unique
  password         String
  role             Role      @default(STUDENT)
  learningStyle    LearningStyle?   // ðŸ”„ pakai enum, bukan String
  enrollments      Enrollment[]
  teachingCourses  Course[]  @relation("TeacherCourses")
  createdAt        DateTime  @default(now())
}

model Course {
  id          Int           @id @default(autoincrement())
  title       String
  description String
  code        String        @unique
  teacher     User          @relation("TeacherCourses", fields: [teacherId], references: [id])
  teacherId   Int
  materials   Material[]
  enrollments Enrollment[]
  createdAt   DateTime      @default(now())
}

model Material {
  id             Int            @id @default(autoincrement())
  title          String
  content        String
  explanation    String?
  learningStyle  LearningStyle  @default(VISUAL)
  course         Course         @relation(fields: [courseId], references: [id])
  courseId       Int
  createdAt      DateTime       @default(now())
}

model Enrollment {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  course    Course   @relation(fields: [courseId], references: [id])
  courseId  Int
  createdAt DateTime @default(now())

  @@unique([userId, courseId]) // 1 user hanya bisa daftar 1x di course yang sama
}
